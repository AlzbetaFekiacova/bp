<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>
<FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MapFragment">

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraTargetLat="48.6401132"
        app:mapbox_cameraTargetLng="19.0904573"
        app:mapbox_cameraZoom="9.0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="31dp">
    </com.mapbox.maps.MapView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/mild_green"
        android:contentDescription="@string/btnFilter"
        android:src="@drawable/ic_baseline_done_24"
        app:tint="@android:color/white"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/mild_green"
        android:contentDescription="@string/btnFilter"
        android:src="@drawable/ic_baseline_filter_alt_24"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/mild_green"
        android:contentDescription="@string/btnLocalize"
        android:src="@drawable/ic_baseline_gps_fixed_24"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom|left"
        android:layout_margin ="16dp"
        android:backgroundTint="@color/red"
        android:contentDescription="@string/btnFilter"
        android:src="@drawable/ic_baseline_cancel_24"
        app:tint="@android:color/white"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded" />
</FrameLayout>
</layout>