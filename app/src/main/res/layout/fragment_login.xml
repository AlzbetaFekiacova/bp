<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginFragment">

    <TextView
        android:id="@+id/txtViewLogInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_log_in"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editTxtEmailLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewLogInTitle"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/et_style"
        android:hint="@string/name"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="20sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTxtPasswordLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtEmailLogIn"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/et_style"
        android:hint="@string/textPassword"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="20sp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_forgotten_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTxtPasswordLogIn"
        android:layout_marginTop="120dp"
        android:padding="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/et_style"
        android:textColor="@android:color/holo_red_dark"
        android:text="Zabudol si heslo?"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn_logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in_txt"
        android:layout_below="@id/editTxtPasswordLogIn"
        android:layout_marginTop="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/et_style"
        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="169dp"
        android:src="@drawable/ic_trash_310219"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="523dp"
        android:layout_below="@id/btn_logIn"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        app:tint="@color/mild_green"
        android:contentDescription="@string/img_desc_application_icon" />



</RelativeLayout>