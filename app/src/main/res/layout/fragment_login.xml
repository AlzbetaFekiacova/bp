<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">


    <TextView
        android:id="@+id/txtViewLogInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_log_in"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/editTxtNameLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewLogInTitle"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTxtPasswordLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtNameLogIn"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:hint="@string/password"
        android:minHeight="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in_txt"
        android:layout_below="@id/editTxtPasswordLogIn"
        android:layout_marginTop="120dp"
        android:layout_centerInParent="true"
        app:cornerRadius="30dp"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="169dp"
        android:src="@drawable/ic_trash_310219"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="523dp"
        android:layout_below="@id/button"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        app:tint="@color/mild_green" />

</RelativeLayout>